#include <Wire.h> 
#include <LiquidCrystal_I2C.h>

// Alterar o endere√ßo conforme modulo I2C
LiquidCrystal_I2C lcd(0x27, 2,1,0,4,5,6,7,3, POSITIVE); 

#define BotA 2
#define BotB 3
#define BotC 4
#define BotD 5

int nQuestao = 10;
int array[10];
int ponto = 0;
  
void setup(){
  pinMode(BotA, INPUT);
  pinMode(BotB, INPUT);
  pinMode(BotC, INPUT);
  pinMode(BotD, INPUT);
  
  lcd.begin(16, 2);
  lcd.clear();
  lcd.setCursor(0,0);
  
  lcd.print("Seja Bem Vindo!");
  Serial.begin(9600);
  delay(2000);
  lcd.clear();
  
  geraSequencia();
}

void loop(){
ponto = 0;
  for (int i = 0; i < nQuestao; i++){
    SelecionaQuestao(array[i]);
  }
  
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("Fim de Jogo!");
  
  delay(2000);
}


void SelecionaQuestao(int nQuestao){
  
  switch(nQuestao){
    case 0:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("1) I left home at six thirty thais morning and went to work");
    if(AnalisaBotao()=='A'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
    case 1:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("He was doing his homework when i called him ");
      if(AnalisaBotao()=='B'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
    case 2:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Did the storm wake you up?It was raining heavily all night");
        if(AnalisaBotao()=='C'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
    case 3:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Stewart wasn't careful. He hit a free and he was falling off this bike ");
        if(AnalisaBotao()=='D'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
    case 4:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("I watched TV when I heard the phone ring");
        if(AnalisaBotao()=='A'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
    case 5:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Ronaldo Phenomenon is the first among the best scorers of the Cup? ");
        if(AnalisaBotao()=='B'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
    case 6:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Brazil,Argentina and Uruguay were the countries that received the most red cards?");
        if(AnalisaBotao()=='C'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
    case 7:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Mexico, hosted the world cup twice?");
        if(AnalisaBotao()=='D'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
    case 8:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("England and spain were the only ones to have won the cup only once ");
        if(AnalisaBotao()=='A'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
    case 9:
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Who won the 2010 World Cup ");
        if(AnalisaBotao()=='B'){
          lcd.setCursor(0,1);
          lcd.print("Correto!");
        }else{
          lcd.setCursor(0,1);
          lcd.print("Errado!");
        }
    break;
  }
  
}

char AnalisaBotao(){
  bool BotaoPressionado = true;
  
  while(BotaoPressionado){
    if(digitalRead(BotA)){
      BotaoPressionado = false;
      return 'A';
    }else if(digitalRead(BotB)){
      BotaoPressionado = false;
      return 'B';
    }else if(digitalRead(BotC)){
      BotaoPressionado = false;
      return 'C';
    }else if(digitalRead(BotD)){
      BotaoPressionado = false;
      return 'D';
    }
  }
}



void geraSequencia(){
  randomSeed(random(0, 1000));
  for (int i = 0; i < nQuestao; i++){     
    array[i] = i;
  }
 
  for (int i = 0; i < nQuestao; i++) {    
    int temp = array[i];
    int novoIndice = random(nQuestao);
    array[i] = array[novoIndice];
    array[novoIndice] = temp;
  }
}
